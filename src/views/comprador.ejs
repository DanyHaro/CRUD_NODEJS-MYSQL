<%-include('partes/header')%>


    <div class="container">
        <div class="row mt-5">
            <div class="col-md-7">

                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Nº</th>
                            <th>Nombre</th>
                            <th>Direccion</th>
                            <th>Celular</th>
                            <th>Acción</th>

                        </tr>

                    </thead>
                    <tbody>
                        <%if (data) { %>
                            <%for (var i=0; i < data.length; i++) { %>
                                <tr>
                                    <td>
                                        <%=(i+1)%>
                                    </td>
                                    <td>
                                        <%= data[i].nombre%>
                                    </td>
                                    <td>
                                        <%= data[i].direccion%>
                                    </td>
                                    <td>
                                        <%= data[i].telefono%>
                                    </td>
                                    <td>
                                        <a href="/delete/<%= data[i].id %>" class="btn btn-danger">DELETE</a>
                                        <!--ENVIAMOS LA ID PARA PODER ELIMINAR-->
                                        <a href="/update/<%= data[i].id %>" class="btn btn-success">EDIT</a>
                                        <!--ENVIAMOS LA ID PARA PODER ACTUALIZAR-->
                                    </td>
                                </tr>

                                <% } %>
                                    <% } %>

                    </tbody>
                </table>


            </div>
            <div class="col-md-5">
                <div class="card" style="border-radius: 20px; border: 2px solid;">
                    <div class="card-body">
                        <form action="/add" method="post">

                            <div class="form-group">
                                <!--name="nombre" deben ser igual que los atributos creados en la BD, ya que pasaremos los datos desde el frontend a la BD-->
                                <input autocomplete="off" type="text" name="nombre" placeholder="Nombre" class="form-control">
                            </div>

                            <div class="form-group">
                                <!--name="nombre" deben ser igual que los atributos creados en la BD, ya que pasaremos los datos desde el frontend a la BD-->
                                <input autocomplete="off" type="text" name="direccion" placeholder="direccion" class="form-control">
                            </div>

                            <div class="form-group">
                                <!--name="nombre" deben ser igual que los atributos creados en la BD, ya que pasaremos los datos desde el frontend a la BD-->
                                <input autocomplete="off" type="text" name="telefono" placeholder="telefono" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary">
                                Guardar comprador
                            </button>


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%-include('partes/footer')%>